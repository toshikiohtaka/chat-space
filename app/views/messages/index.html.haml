.chat
  = render partial: "groups/chat-side"
  .chat-main
    .chat-header
      .chat-header--left
        %h2
          = @group.name
        %p.chat-header__users
          Membersï¼š
          = render partial: "members"
      .chat-header--right
        = link_to "Edit", edit_group_path(@group), class: "chat-header__edit"
    .chat-body
      %ul.chat-messages
        - @messages.each do |message|
          %li.chat-message
            .chat-message__header
              %p.chat-message__user
                = message.user.name
              %p.chat-message__date
                = message.created_at
            .chat-message__text
              = message.message
    .chat-footer
      = form_for [@group,@message] do |f|
        .chat-footer__text
          = f.text_area :message, placeholder: "type a message"
          = f.hidden_field :user_id, value: current_user.id
          = f.label class: "chat-footer__file" do
            %i{class: "fa fa-file-image-o"}
        = f.submit "send"
